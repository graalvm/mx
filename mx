dir=`/bin/pwd`

# Resolve location of this script so that mx.py can be found in the same directory
source="${BASH_SOURCE[0]}"
while [ -h "$source" ] ; do
  prev_source="$source"
  source="$(readlink "$source")";
  if [[ "$source" != /* ]]; then
    # if the link was relative, it was relative to where it came from
    dir="$( cd -P "$( dirname "$prev_source" )" && pwd )"
    source="$dir/$source"
  fi
done
dir="$( cd -P "$( dirname "$source" )" && pwd )"

: ${__MX_MODULE__:="mx_enter.py"}

if [ ! -f "$dir/${__MX_MODULE__}" ]; then
    echo "Cannot find ${__MX_MODULE__} in $dir"
    exit 1
fi

# Prefer the interpreter specified by MX_PYTHON
if [ -n "${MX_PYTHON}" ]; then
    python_exe=${MX_PYTHON}
elif [ -n "${MX_PYTHON_VERSION}" ]; then
    python_exe=python${MX_PYTHON_VERSION}
else
    type python3.8 >/dev/null 2>&1
    if [ $? -eq 0 ]; then
        python_exe=python3.8
    else
        type python3 >/dev/null 2>&1
        if [ $? -eq 0 ]; then
            python_exe=python3
        else
            type python > /dev/null 2>&1
            if [ $? -eq 0 ]; then
                python_exe=python
            else
                type python3 > /dev/null 2>&1
                if [ $? -eq 0 ]; then
                    python_exe=python3
                else
                    echo "Cannot find Python on PATH"
                    exit 1
                fi
            fi
        fi
    fi
fi

type ${python_exe} >/dev/null 2>&1
if [ $? -ne 0 ]; then
    echo "Cannot find ${python_exe} on PATH"
    exit 1
fi

# Include the parent directory of this script in the python path variable, then
# allow loading of the mx module
export PYTHONPATH="$dir/..:$PYTHONPATH"

# The following allows the use of existing module names
export PYTHONPATH="$dir/oldnames:$PYTHONPATH"

exec $python_exe -u -m mx "$@"
